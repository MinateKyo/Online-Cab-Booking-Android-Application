<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/colorPrimaryDark"
    tools:context="com.parkouronitgmail.cabbies.UploadDocument">
    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        android:id="@+id/text1"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:padding="5dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@color/colorAccent"
                android:text="@string/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text1"
        app:cardElevation="5dp"
        android:id="@+id/text2"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/a"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorAccent"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="Licence"
                android:textSize="30sp"
                android:layout_width="250dp"
                android:layout_height="50dp" />
            <ImageButton
                android:id="@+id/license"
                android:layout_toLeftOf="@+id/a"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_menu_camera"
                android:layout_width="100dp"
                android:layout_height="50dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:id="@+id/text3"
        android:layout_below="@+id/text2"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/b"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorAccent"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="Permit Front"
                android:textSize="30sp"
                android:layout_width="250dp"
                android:layout_height="50dp" />
            <ImageButton
                android:id="@+id/permit"
                android:layout_toLeftOf="@+id/b"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_menu_camera"
                android:layout_width="100dp"
                android:layout_height="50dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text3"
        app:cardElevation="5dp"
        android:id="@+id/text4"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/c"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorAccent"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="RC"
                android:textSize="30sp"
                android:layout_width="250dp"
                android:layout_height="50dp" />
            <ImageButton
                android:id="@+id/rc"
                android:layout_toLeftOf="@+id/c"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_menu_camera"
                android:layout_width="100dp"
                android:layout_height="50dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text4"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/d"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorAccent"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:text="Car Insuarance"
                android:textSize="30sp"
                android:layout_width="250dp"
                android:layout_height="50dp" />
            <ImageButton
                android:id="@+id/insurance"
                android:layout_toLeftOf="@+id/d"
                android:layout_alignParentEnd="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_menu_camera"
                android:layout_width="100dp"
                android:layout_height="50dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
